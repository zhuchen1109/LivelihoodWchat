<!--pages/detail/detail.wxml-->
<view class="container">
  <view class="item">
    <view class="title">标题</view>
    <view class="content">{{item.title}}</view>
  </view>
  <view class="item">
    <view class="title">信件内容</view>
    <view class="content">{{item.content}}</view>
  </view>
  <view class="item">
    <view class="title">回复内容</view>
    <view class="content">{{item.replyContent}}</view>
  </view>
  <view class="item row">
    <view class="subtitle">答复单位</view>
    <view class="subcontent">{{item.reply}}</view>
    <view class="subtitle">回复时间</view>
    <view class="subcontent">{{item.replyDate}}</view>
  </view>
  <view class="item row">
    <view class="subtitle">信件类型</view>
    <view class="subcontent">{{item.type}}</view>
    <view class="subtitle">来信时间</view>
    <view class="subcontent">{{item.createTime}}</view>
  </view>
</view>
